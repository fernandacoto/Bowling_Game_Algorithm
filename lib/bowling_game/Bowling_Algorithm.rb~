module Bowling_Game_Algorithm
  class Bowling_Algorithm
    def initialize(output)
      @output = output
      @frames = Array.new(21)
      @try = 0
      @score
    end

    def start
      @output.puts 'Welcome to the Bowling Game Algorithm!'
      @output.puts 'Enter the number of pins fallen:'
    end

    def roll(pins)
      @frames[@try] = pins
      @try += 1
    end

    def score
      return @score
    end
  end
end
